<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessRequest.ForgotPassword">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BackToLogin"
            app:srcCompat="@drawable/baseline_keyboard_backspace_24" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_back"
            android:layout_alignEnd="@id/btn_back"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="-26dp"
            android:text="Back"
            android:textSize="16sp"
            android:onClick="BackToLogin"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassWelcomeText"
            android:textAlignment="center"
            android:layout_below="@id/txt_back"
            android:layout_marginTop="30dp"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/fpw_inpt_email"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" />

        <ImageView
            android:id="@+id/btn_sendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_email"
            android:layout_below="@id/fpw_inpt_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <ProgressBar
            android:id="@+id/fwd_progressBar"
            android:layout_width="106dp"
            android:layout_height="89dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</ScrollView>