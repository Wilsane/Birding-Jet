<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option Description"
        android:textSize="22sp"
        android:textColor="@color/limeGreen"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/round_cancel_24"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:id="@+id/oldInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dialogTitle"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txtOld"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Old"
            android:layout_marginTop="10dp"
            android:textColor="@color/limeGreen"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/edt_background"
            android:enabled="false"
            android:paddingHorizontal="3dp"
            android:text="James Wilson"
            android:textColor="#8E8D8D" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/newInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/oldInfoLayout">
        <TextView
            android:id="@+id/txtNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:layout_marginTop="10dp"
            android:textColor="@color/limeGreen"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingHorizontal="3dp"
            android:background="@drawable/edt_background"
            android:layout_gravity="fill_vertical"/>
    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/newInfoLayout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>