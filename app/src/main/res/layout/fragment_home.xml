<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedIn.Home">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_nameAndSlogan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="@string/Slogan"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_info_40"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/txt_nameAndSlogan"/>

    <LinearLayout
        android:id="@+id/homeTopNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nameAndSlogan"
        android:orientation="horizontal"
        android:padding="3dp">
        <Button
            android:id="@+id/btn_nearby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nearby"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_gravity="start"
            android:background="@drawable/selected_home_top_navbar"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hotspots"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:textColor="@color/limeGreen"
            android:layout_centerHorizontal="true"
            android:background="@drawable/not_selected_home_top_navbar"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homeTopNavbar"/>



</RelativeLayout>